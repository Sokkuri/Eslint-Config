{
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "overrides": [
        {
            "files": ["*.{js,ts,vue}"],
            "rules": {
                "quotes": [
                    2,
                    "double"
                ],
                "spaced-comment": 2,
                "@typescript-eslint/no-unused-vars": [
                    "error"
                ],
                "@typescript-eslint/semi": [
                    "error",
                    "always"
                ],
                "object-curly-spacing": [
                    "error",
                    "always"
                ],
                "array-bracket-spacing": [
                    "error",
                    "always"
                ],
                "space-before-blocks": [
                    "error",
                    "always"
                ]
            }
        }
    ]
}
